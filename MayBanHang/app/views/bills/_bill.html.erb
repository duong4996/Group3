<div class="row clearfix">
<% if bill.completed? %>
	<div class="complete">
	<%= link_to complete_table_bill_path(@table, bill.id), method: :patch do %>
		<i style="opacity: 0.4;" class="fa fa-check"></i>
	<% end %>
	</div>
	<div class="todo_item">
	<p style="opacity: 0.4;"><strike><%= bill.content %></strike></p>
	</div>
	<div class="trash">
	<%= link_to "Delete", table_bill_path(@table, bill.id), method: :delete, data: { confirm: "Are you sure?" } %>
	</div>
<% else %>
	<div class="complete">
	<%= link_to "Mark as complete", complete_table_bill_path(@table, bill.id), method: :patch %>
	</div>
	<div class="todo_item">
	<p><%= bill.content %></p>
	</div>
	<div class="trash">
	<%= link_to "Delete", table_bill_path(@table, bill.id), method: :delete, data: { confirm: "Are you sure?" } %>
	</div>
<% end %>

</div>
