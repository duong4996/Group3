<h1 class="category_content">Listing tables</h1>

<table>
  <thead>
    <tr>
      <th>Table's Name    </th>
      <th>Number of guesses</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @tables.each do |table| %>
      <tr>
        <td><%= table.title %></td>
        <td><%= table.description %></td>
        <td><%= link_to image_tag("images.png"), table %></td>
        <td><%= link_to 'Edit', edit_table_path(table) %></td>
        <td><%= link_to 'Destroy', table, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Table', new_table_path %>
